<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>Autenticacao</filter-name>
        <filter-class>scv.filtros.Autenticacao</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Autenticacao</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>scv.controller.UsuarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/UsuarioController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UsoController</servlet-name>
        <servlet-class>scv.controller.UsoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsoController</servlet-name>
        <url-pattern>/UsoController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            UsoController
        </welcome-file>
    </welcome-file-list>
</web-app>
